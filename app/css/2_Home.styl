.home
    height 100vh
    max-width 100%
    background-image url('../img/Home_bg1.jpg')
    background-size cover 
    background-repeat no-repeat
    background-position center center 
    padding 100px 0
    box-sizing border-box
    position relative
    &__hidden
        display none
        position absolute
        top 5vh
        right 0
        width 9vh
        height 9vh
        background url('../img/hidden.png') center no-repeat
        background-size cover
        text-align center
    &__hiddenText
        margin 0 auto
        font-size 5vh
        font-family 'Outrun'
        color #000
        position relative
        top -1vh
    &__hidList
        margin 0 auto
        font-size 24px
        font-family 'Outrun'
        list-style none
        display none
        justify-content center
        max-width 100%
        flex-wrap wrap
        flex-direction column
        text-align center
        &-closed
            display flex
    &__container
        max-width 1600px
        margin 0 auto
        height 100%
        text-align center
        display flex
        justify-content center
        align-items center
        flex-direction column
    &__navigation
        margin 0 auto
        font-size 24px
        font-family 'Outrun'
        list-style none
        display flex
        justify-content center
        max-width 100%
        flex-wrap wrap
    &__navItem
        position relative
    &__lines
        position absolute
        opacity 0
        transition opacity 0.7s ease
        width 79%
        top 17px
        left 17px
    &__line 
        border-bottom 1px solid #6164c7
        display flex
        width 100%
        position absolute
        margin 2px 
        &-left
            left: 2px;
            top: 0px;
        &-right
            right: -17px;
            top: 6px;
        &-leftTwo
            left: -12px;
            top: 13px;
        &-rightTwo
            left: 4px;
            top: 20px;  
    &__link
        position relative
        text-decoration none
        text-transform uppercase
        color #fff
        margin 0 25px
    &__navItem:hover &__lines
        opacity 1
        transition opacity 0.7s ease
    &__header
        background linear-gradient(to bottom, #000, rgba(255, 255, 255, 0.11), #ffffff47),url('../img/Home_bg_h.jpg')
        background-attachment fixed
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        font-size 170px
        font-weight bold
        font-family 'Outrun'
        text-transform uppercase
        line-height 220px
        width 100%
    &__subheader
        background linear-gradient(to bottom, #000, rgba(255, 255, 255, 0.11), #ffffff47),url('../img/Home_bg_h.jpg')
        background-attachment fixed
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        font-size 40px
        font-weight bold
        font-family 'Outrun'
        text-transform uppercase
        margin-bottom 90px
    &__button
        height 50px
        width 240px
        color #000000
        text-decoration none
        font-family 'Outrun'
        font-size 18px
        background url('../img/Button.png') 
        background-size cover

    &__hidMenu-close 
        transform scale(0.01)
        opacity 0

    &__toggle 
        display none
        position fixed
        right 0
        top 0
        cursor pointer
        z-index 999

    &__hidMenu 
        background rgba(0,0,0,.9)
        position fixed
        top 0
        right 0
        height 100%
        width 100%
        display none
        justify-content center
        align-items center
        transition-duration 0.3s
        transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
        transform-origin top right
        z-index 998

    #nav-icon2 
        width 40px
        height 40px
        position absolute
        top 5vh
        right 5vh
        transform rotate(0deg)
        transition .5s ease-in-out
        cursor pointer
    
    #nav-icon2 span 
        display block
        position absolute
        height 4px
        width 50%
        background #fff
        opacity 1
        transform rotate(0deg)
        transition .25s ease-in-out
    #nav-icon2 span:nth-child(even) 
        left 50%
        border-radius 0 9px 9px 0

    #nav-icon2 span:nth-child(odd) 
        left 0px
        border-radius  9px 0 0 9px

    #nav-icon2 span:nth-child(1), #nav-icon2 span:nth-child(2) 
        top 5px

    #nav-icon2 span:nth-child(3), #nav-icon2 span:nth-child(4) 
        top 18px

    #nav-icon2 span:nth-child(5), #nav-icon2 span:nth-child(6)
        top 31px

    #nav-icon2.open span:nth-child(1),#nav-icon2.open span:nth-child(6)
        transform rotate(45deg)

    #nav-icon2.open span:nth-child(2),#nav-icon2.open span:nth-child(5) 
        transform rotate(-45deg)

    #nav-icon2.open span:nth-child(1) 
        left 5px
        top 10px

    #nav-icon2.open span:nth-child(2)
        left calc(50% - 5px)
        top 10px

    #nav-icon2.open span:nth-child(3)
        left -50%
        opacity 0

    #nav-icon2.open span:nth-child(4)
        left 100%
        opacity 0

    #nav-icon2.open span:nth-child(5) 
        left 5px
        top 20px

    #nav-icon2.open span:nth-child(6) 
        left calc(50% - 5px)
        top 20px
.showcase
    &__slider
        height 100vh
        #slides
            position relative
            height 100%
            padding 0px
            margin 0px
            list-style-type none
            z-index 1
            .slide
                position absolute
                box-sizing border-box
                left 0px
                top 0px
                display flex
                flex-direction column
                justify-content center
                align-items center
                width 100%
                height 100%
                opacity 0
                z-index 0
                transition opacity 1s
            .slide:nth-of-type(1)
                background url("../img/slide1.jpg") center no-repeat
                background-size cover
            .slide:nth-of-type(2)
                background url("../img/slide2.jpg") center no-repeat
                background-size cover
            .slide:nth-of-type(3)
                background url("../img/slide3.jpg") center no-repeat
                background-size cover
            .slide:nth-of-type(4)
                background url("../img/slide4.jpg") center no-repeat
                background-size cover
            .showing
                opacity 1
                z-index 1
        #controls
            position relative
            bottom 14vh
            display flex
            height 10vh
            width 100%
            margin 0 auto
            display flex
            justify-content center
            align-items center
            z-index 1
            .control_button
                box-sizing border-box
                display block
                border-left 4px solid rgba(0 0 0 0.1)
                border-right 4px solid rgba(0 0 0 0.1)
                width 25%
                height 18vh
                z-index -1
                cursor pointer
            .control_button:nth-of-type(1)
                background url("../img/slide1.jpg") center no-repeat
                background-size cover
            .control_button:nth-of-type(2)
                background url("../img/slide2.jpg") center no-repeat
                background-size cover
            .control_button:nth-of-type(3)
                background url("../img/slide3.jpg") center no-repeat
                background-size cover
            .control_button:nth-of-type(4)
                background url("../img/slide4.jpg") center no-repeat
                background-size cover
            .controls__enabled
                border-left 4px solid #ff000087
                border-right 4px solid #ff000087

.joinUs
    height 100vh
    background url('../img/join_bg.png') center no-repeat 
    background-size cover 
    background-attachment fixed
    &__container
        max-width 1600px
        margin 0 auto
        height 80vh
        text-align center
        display flex
        justify-content center
        align-items center
        flex-direction column
    &__header
        background linear-gradient(to bottom, #000, #fd0000b3, #de7006),url('../img/Home_bg_h.jpg')
        background-attachment fixed
        -webkit-text-fill-color transparent
        -webkit-background-clip text
        font-size 60px
        font-weight bold
        font-family 'Outrun'
        text-transform uppercase
        line-height 220px
        width 100%
    &__button
        height 50px
        width 240px
        color #fd0000
        text-decoration none
        font-family 'Outrun'
        font-size 18px
        background url('../img/Button.png') 
        background-size cover
    &__credits
        height 20vh
        background url('../img/credits_bg.png') center no-repeat 
        background-size cover 
        display flex 
        justify-content center
        align-items flex-end
        text-align center
    &__allRights
        color #ffffff54
        font-size 18px
        font-family 'Outrun'